<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".GroupAdminActivity"
    android:weightSum="1">

    <android.support.v7.widget.Toolbar
        android:id="@+id/rocket_toolbar"
        android:title="My Groups"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/RocketOrange"
        android:navigationIcon="@drawable/ic_rocket_arrow"
        android:elevation="4dp"/>

    <TextView
        android:text="Tap group name to select.\nLong press to bring up options menu."
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_below="@id/rocket_toolbar"
        android:paddingLeft="20dp"
        android:paddingTop="8dp"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/textView5"
        android:background="#ddd" />
    <ListView
        android:id="@+id/mobile_list"
        android:layout_below="@id/textView5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="16sp"
        android:divider="@color/RocketBlue"
        android:dividerHeight="1dp"
        android:headerDividersEnabled="true"
        android:choiceMode="singleChoice"
        android:footerDividersEnabled="true">
    </ListView>

</LinearLayout>
